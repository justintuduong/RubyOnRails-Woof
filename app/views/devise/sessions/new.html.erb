<section class="row d-flex justify-content-center">
    <div class="col-4">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-center form-control' %>
        </div>

        <div class="field">
            <%= f.label :password, class: "mt-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'text-center form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field text-center mt-2">
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="actions text-center">
            <%= f.submit "Log in", class: "btn btn-outline-primary form-control" %>
        </div>
        <% end %>
        <div class="text-center mt-3">
            <%= render "devise/shared/links"%>
        </div>
    </div>
</section>