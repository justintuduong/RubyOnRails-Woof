<ul id="slides" class="text-center">
    <% @users.each_with_index do |user, i| %>
    <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
        <div class="image-carousel mt-3" style= "background-image: url('<%= url_for user.images.first %>')">
        </div>
        <%= user.first_name %> <%= user.last_name %><br>
        <i class="fa fa-graduation-cap">Bork University</i><br>
        <i class="fa fa-map-marker">Woof Town</i>
    </li>
    <% end %>
</ul>

<div class="text-center mt-3"> 
    <span id="decline"><i class="fas fa-times fa-3x text-danger mr-4 click"></i></span>
    <span id="approve"><i class="fa fa-check fa-3x text-success click"></i></span>
</div>

